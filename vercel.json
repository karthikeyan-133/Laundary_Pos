{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend-new/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "backend-new/api/test.js"
    },
    {
      "src": "/api/products",
      "dest": "backend-new/api/products.js"
    },
    {
      "src": "/api/customers",
      "dest": "backend-new/api/customers.js"
    },
    {
      "src": "/api/orders",
      "dest": "backend-new/api/orders.js"
    },
    {
      "src": "/api/settings",
      "dest": "backend-new/api/settings.js"
    },
    {
      "src": "/api/returns",
      "dest": "backend-new/api/returns.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend-new/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Origin, X-Requested-With, Content-Type, Accept, Authorization"
        }
      ]
    }
  ]
}